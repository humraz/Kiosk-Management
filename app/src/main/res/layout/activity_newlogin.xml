<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#00b0ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@drawable/ecoo"
            android:id="@+id/imageView"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal|center" />
        <!-- Email Label -->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            app:met_baseColor="#fffffbf9"
            android:layout_marginTop="10dp"

            app:met_textColorHint="#ffdfdbd9"
            app:met_primaryColor="#ff46e358"
            app:met_errorColor="#ffff7064"
            android:id="@+id/user2"
            app:met_floatingLabel="normal"
            app:met_minCharacters="0"
            app:met_maxCharacters="25"

            />

        <!-- Password Label -->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            app:met_baseColor="#fffffbf9"
            app:met_textColorHint="#ffdfdbd9"
            app:met_primaryColor="#ff46e358"
            app:met_errorColor="#ffff7064"
            android:id="@+id/pass"
            app:met_floatingLabel="normal"
            app:met_minCharacters="0"
            app:met_maxCharacters="25"

            />

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorNormal="@color/blue_normal"
            custom:pb_colorPressed="@color/blue_pressed"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="Success"
            custom:pb_textProgress="Loading"
            custom:pb_textError="Error"
            custom:pb_colorError="@color/red_error"
            android:onClick="click"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

        <TextView android:id="@+id/link_signup3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Admin? Log In Here"
            android:gravity="center"
            android:textSize="16dip"
            android:onClick="mo"
            android:layout_marginTop="8dp" />
        <TextView android:id="@+id/link_signup4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Warehouse? Log In Here"
            android:gravity="center"
            android:textSize="16dip"
            android:onClick="warer"
            android:layout_marginTop="8dp" />
        <TextView android:id="@+id/link_signup5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="PM Manager? Log In Here"
            android:gravity="center"
            android:textSize="16dip"
            android:onClick="pm"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>