<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.perchtech.humraz.farmkiosk.admin.homepage"
    android:background="@color/book_loading_book">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <it.gmariotti.cardslib.library.view.CardListView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myList"
            android:background="@color/book_loading_book" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="right|bottom"
            android:foregroundGravity="right"
            android:layout_gravity="right">

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bmb_buttonEnum="textOutsideCircle"
                app:bmb_piecePlaceEnum="piecePlace_dot_9_1"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_9_1"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
